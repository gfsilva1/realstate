<div class="login">
  <div class='container'>
    <div class='row full-height justify-content-center'>
      <div class='col-12 text-center align-self-top pt-5'>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class='card-3d-wrap mt-auto pt-5'>
            <div class='card-3d-wrapper'>
              <div class='center-wrap front'>
                <div class='section text-center'>
                  <div class='container'>
                    <div class='form-group'>
                      <%= f.input :email,
                                    required: false,
                                    autofocus: true,
                                    name: 'logemail',
                                    class: 'form-style border border-1 border-white rounded',
                                    placeholder: "Seu melhor email",
                                    id: 'logemail',
                                    input_html: { autocomplete: "email" } %>
                      <i class='input-icon uil uil-at'></i>
                    </div>
                    <div class='form-group mt-2'>
                      <%= f.input :password,
                                  required: false,
                                  name: 'logepass',
                                  id: 'logepass',
                                  class: 'form-style border border-1 border-white rounded',
                                  placeholder: "Sua senha",
                                  input_html: { autocomplete: "current-password" } %>
                      <i class='input-icon uil uil-lock-alt'></i>
                    </div>
                  </div>
                  <%= f.input :remember_me, type: 'radio', class: 'forgot', as: :boolean if devise_mapping.rememberable? %>
                  <%= render "devise/shared/links" %>
                  <div class="form-actions">
                    <%= f.button :submit, "Log in", class: 'btn-log mb-1 mt-3 rounded-3' %>
                  </div>
                  <h4 class='mb-3 pb-2'><%= link_to "Signup", new_registration_path(resource_name), {:style=>'text-decoration:none;color:#FFFFFF' } %></h4>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
