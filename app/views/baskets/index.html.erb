        <div class="container text-center">
          <%= link_to new_basket_url() do  %>
            <button class="btn-sign mb-1 mt-3 rounded-3 text-center" id='add-basket-button'>Add a basket!</button>
          <% end %>
        </div>

      <% else %>
      <div class="container text-center">
        <%= link_to new_basket_path do  %>
            <button class="btn-sign mb-1 mt-3 rounded-3" id='add-basket-button'>Adicione um imÃ³vel</button>
          <% end %>
          <h1 class="text-center"> Veja seus imÃ³veis</h1>
      </div>

      <% end %>
    </div>
  <% end %>

  <% basket_array = %w[
